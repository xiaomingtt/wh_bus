.gaotitle {
  position: fixed;
  width: 100vw;
  height: 80rpx;
  left: 0;
  top: 0;
  background-color: #ccc;
  z-index: 999;
}

.gaotitlewh {
  float: left;
  width: 49%;
  line-height: 80rpx;
  text-align: center;
}

.gaotitlewd {
  float: right;
  width: 49%;
  line-height: 80rpx;
  text-align: center;
}

.on {
  color: #f00;
  border-bottom: 4rpx solid #f00;
}

.gaoscrollview {
  width: 100%;
  height: calc(100vh - 20rpx);
  margin-top: 100rpx;
}

.gaoitem {
  width: 96%;
  height: 150rpx;
  margin: 10rpx 2%;
  border-bottom: 1rpx solid #8d8d8d;
}

.gaoitemtitle {
  width: 100%;
  height: 105rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.gaotitletime {
  width: 100%;
  height: 35rpx;
  font-size: 28rpx;
}

.gaotan {
  position: fixed;
  z-index: 99999;
  width: 90%;
  height: calc(80vh);
  top: calc(10vh);
  left: 37.5rpx;
  border-radius: 35rpx;
  background-color: #ddd;
}

.gaoguanbi {
  background-color: #fff;
  width: 55rpx;
  height: 55rpx;
  float: right;
  margin: 5rpx 10rpx;
  border-radius: 35rpx;
  text-align: center;
}

.gaobody {
  clear: both;
  width: 96%;
  height: calc(65vh);
  margin: 10rpx 2%;
}

.gaook {
  color: #00f;
  width: 100%;
  height: calc(4vh);
  font-size: 32rpx;
  text-align: center;
  margin: calc(2vh) auto;
}
