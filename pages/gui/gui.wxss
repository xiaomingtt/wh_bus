.bottomview {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100vw;
  height: 120rpx;
  background-color: #fff;
  color: #8d8d8d;
  font-size: 28rpx;
  display: -webkit-flex;
  display: flex;
  -webkit-justify-content: space-around;
  justify-content: space-around;
}

.bottomview image {
  width: 65rpx;
  height: 65rpx;
}

.bottomanniu {
  width: 65rpx;
  text-align: center;
}

.scrollview {
  width: 100vw;
  height: calc(96vh - 135rpx);
  background-color: #eee;
}

.mapview {
  width: 100vw;
  height: calc(96vh - 135rpx);
}

#mmap {
  width: 100vw;
  height: calc(96vh - 135rpx);
}

.gxitemview {
  width: 96%;
  height: 100rpx;
  margin: auto 2%;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
}

.gxitemview:first-child {
  margin-top: 15rpx;
}

.gxitemimg {
  width: 100rpx;
  height: 100rpx;
  float: left;
}

.gxitemimg image {
  width: 60rpx;
  height: 60rpx;
  margin: 20rpx;
}

.gxitemtxt {
  width: calc(96vw - 150rpx);
  height: 100rpx;
  line-height: 100rpx;
  float: left;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.gxitemyou {
  width: 40rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  float: left;
}

.gxitemyou image {
  width: 40rpx;
  height: 40rpx;
}

.gxmoreview {
  width: 94%;
  margin: 3rpx 3%;
  background-color: #fff;
}

.gxmoreviewlist {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  color: #8a8a8a;
  border-bottom: #eee solid 1rpx;
  padding-left: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.gxotherbus {
  width: 100%;
  color: #8a8a8a;
  font-size:32rpx;
}
