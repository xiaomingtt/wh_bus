.gotosearch {
  width: 96%;
  height: 5vh;
  border: solid 1rpx #515151;
  margin: 0 2%;
  text-align: center;
  border-radius: 28rpx;
  color: #515151;
}

.gotosearchimg {
  float: left;
  width: 43%;
  height: 3vh;
  margin: 1vh auto;
}

.gotosearchimg image {
  width: 35rpx;
  height: 35rpx;
  float: right;
}

.gotosearchtext {
  float: right;
  width: 56%;
  height: 3vh;
  margin: 1vh auto;
  font-size: 3vh;
}

.gotosearchtext text {
  float: left;
  height: 3vh;
  line-height: 3vh;
}

.mainviewscroll {
  width: 96%;
  height: 75vh;
  margin: 0 2%;
}

.mainitem {
  font-size: 45rpx;
  width: 100%;
  height: 65rpx;
  line-height: 65rpx;
  margin: 15rpx 5rpx;
  border-bottom: 1rpx solid #8d8d8d;
  overflow: auto;
}

.adview {
  width: 96%;
  height: 14vh;
  border: solid 1rpx #8d8d8d;
  margin: 0 2%;
}

.adtitle {
  z-index: 99;
  position: absolute;
  width: 96%;
  margin: 0;
  padding: 0;
  height:27rpx;
}

.adtext {
  font-size: 25rpx;
  float: left;
  background-color: rgba(200, 200, 200, 0.5);
  color: #888;
  line-height: 27rpx;
}

.adview swiper {
  width: 100%;
  height: 100%;
}

.adclose {
  float: right;
  background-color: rgba(200, 200, 200, 0.5);
  color: #888;
  font-size: 27rpx;
  line-height: 27rpx;
  height:27rpx;
  width:27rpx;
  text-align:center;
}

.adview image {
  width: 100%;
  height: 14vh;
}

.showggview {
  position: fixed;
  z-index: 99999;
  width: 90%;
  height: 70vh;
  top: 10vh;
  left: 37.5rpx;
  border-radius: 35rpx;
  background-color: #ddd;
}

.showggclose {
  background-color: #fff;
  width: 55rpx;
  height: 55rpx;
  float: right;
  margin: 5rpx 10rpx;
  border-radius: 35rpx;
  text-align: center;
}

.showggbody {
  clear: both;
  width: 96%;
  height: 55vh;
  margin: 10rpx 2%;
}

.showmoregg {
  color: #00f;
  width: 100%;
  height: 4vh;
  font-size: 32rpx;
  text-align: center;
  margin: 2vh auto;
}

.showmoregg text {
  border-bottom: 1rpx solid #00f;
}
